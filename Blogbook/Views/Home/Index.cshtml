@{
  ViewData["Title"] = "Home Page";
}

<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <p>Welcome to Blogbook!</p>
      @if (User.Identity.IsAuthenticated)
      {
        <p>
          <button class="btn btn-outline-primary" data-toggle="modal" data-target="#new-post-modal" id="add-new-post"><i class="fa fa-plus-circle"></i> Add a new post.</button>
        </p>
      }
    </div>
  </div>
</section>

<div>
  @if (User.Identity.IsAuthenticated)
  {
    <form>
      <div class="btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-outline-secondary">
          <input type="checkbox" id="my-content"> Show only my content
        </label>
      </div>
    </form>
  }
  <form class="text-right">
    <label for="order" class="">Sort by publication date</label>
    <select id="order" class="form-select">
      <option value="0">Newest first</option>
      <option value="1">Oldest first</option>
    </select>
  </form>
</div>

<div class="gallery" id="posts">

</div>

<div class="modal" tabindex="-1" role="dialog" id="new-post-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <time id="new-post-current-date" class="text-muted"></time>
          <input id="new-post-title" type="text" placeholder="Surprise everyone (or add your title here)" class="form-control" />
          <textarea id="new-post-description" placeholder="What do you want to tell the world? (Add your content)" class="form-control"></textarea>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Not today</button>
        <button type="button" class="btn btn-primary" id="new-post-send">Let's go</button>
      </div>
    </div>
  </div>
</div>

<span id="load"> Loading ... </span>

@if (User.Identity.IsAuthenticated)
{
  <div class="fixed-bottom text-right p-4">
    <button class="btn btn-primary" data-toggle="modal" data-target="#new-post-modal" id="add-new-post-1"><i class="fa fa-plus-circle"></i> Add a new post.</button>
  </div>
}